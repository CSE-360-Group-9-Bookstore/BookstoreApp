<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="bookstore.TestingController" spacing="15" style="-fx-background-color: #222;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <TextField fx:id="firstNameField" promptText="Enter first name" style="-fx-background-color: #333; -fx-text-fill: white; -fx-prompt-text-fill: #aaa;" />
    <TextField fx:id="lastNameField" promptText="Enter last name" style="-fx-background-color: #333; -fx-text-fill: white; -fx-prompt-text-fill: #aaa;" />
    <Button fx:id="addButton" text="Add Name" onAction="#handleAddName" style="-fx-background-color: #444; -fx-text-fill: white; -fx-background-radius: 5;"/>
</VBox>
