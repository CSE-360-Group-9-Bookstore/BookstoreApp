<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="bookstore.controllers.SellerController"
      style="-fx-background-color: white; -fx-padding: 20;">

    <!-- Left Column -->
    <VBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 20;">
        <Label fx:id="messageLabel" text="Welcome to Page 2!" style="-fx-text-fill: black; -fx-font-size: 16px;"/>

        <Label text="Seller:" style="-fx-text-fill: black;"/>
        <Label fx:id="sellerIDLabel" style="-fx-text-fill: black; -fx-font-size: 14px;"/>

        <Label text="Select Duration" style="-fx-text-fill: black;"/>
        <ComboBox fx:id="duration"/>

        <Label text="Sales Quantity" style="-fx-text-fill: black;"/>
        <TextField fx:id="salesQuantity" promptText="Enter quantity"/>

        <Label text="Sales Revenue" style="-fx-text-fill: black;"/>
        <TextField fx:id="salesRevenue" promptText="Enter revenue ($)"/>

        <Label text="Net Profit" style="-fx-text-fill: black;"/>
        <TextField fx:id="netProfit" promptText="Enter profit ($)"/>

        <Label text="Your Current Offerings" style="-fx-text-fill: black;"/>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <ListView fx:id="currentOfferings"/>
        </ScrollPane>
    </VBox>

    <!-- Right Column -->
    <VBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 20;">
        <!-- Add New Listing Button -->
        <Button fx:id="addNewListingButton" text="Add New Listing" style="-fx-background-color: #444; -fx-text-fill: white;"/>

        <Label text="Edit Book Title" style="-fx-text-fill: black;"/>
        <TextField fx:id="bookTitle" promptText="Enter book title"/>

        <Label text="Edit Author" style="-fx-text-fill: black;"/>
        <TextField fx:id="author" promptText="Enter author"/>

        <Label text="Edit Description" style="-fx-text-fill: black;"/>
        <TextArea fx:id="description" promptText="Enter description"/>

        <Label text="Edit ISBN-10" style="-fx-text-fill: black;"/>
        <TextField fx:id="isbn10" promptText="Enter ISBN-10"/>

        <Label text="Edit ISBN-13" style="-fx-text-fill: black;"/>
        <TextField fx:id="isbn13" promptText="Enter ISBN-13"/>

        <Label text="Edit Type of Book" style="-fx-text-fill: black;"/>
        <TextField fx:id="bookType" promptText="Enter type of book"/>

        <Label text="Edit Quantity" style="-fx-text-fill: black;"/>
        <TextField fx:id="quantity" promptText="Enter quantity"/>

        <Label text="Edit Condition" style="-fx-text-fill: black;"/>
        <TextField fx:id="condition" promptText="Enter condition"/>

        <Label text="Edit Price" style="-fx-text-fill: black;"/>
        <TextField fx:id="price" promptText="Enter price ($)"/>

        <Button fx:id="updateListingButton" text="Update Listing" style="-fx-background-color: #444; -fx-text-fill: white;" visible="false"/>
    </VBox>
</HBox>
